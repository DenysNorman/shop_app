<h1><%= @order.name %>, your order is accepted.</h1>
<h2>Order id : <%= @order.id %></h2>
  <h3>You ordered:</h3>
<table>
  <tr>
    <td>Title</td>
    <td>Price</td>
    <td>Quantity</td>
  </tr>
  <% OrderProduct.where(order_id: @order.id).each do |ord| %>
      <% product = Product.find(ord.product_id) %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %> </td>
        <td><%= ord.quantity %></td>
      </tr>
  <% end %>
</table>
<p>Total price <%= number_to_currency(@order.total_price(@order).to_i) %></p>
<p>Wait, our manager will contact you.</p>