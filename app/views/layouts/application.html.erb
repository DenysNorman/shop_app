<!DOCTYPE html>
<html>
  <head>
    <title>Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <%= link_to 'Guitar Heaven', root_path, class: "navbar-brand" %>
      </div>
      <div class="search">
        <%= form_tag products_path, method: 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag 'Search', :name  => nil %>
          </p>
        <% end %>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="cart">
        <span ><%= link_to 'Cart ', orders_path, class:'glyphicon glyphicon-shopping-cart' %>
        (<%= cookies[:cart].present? ? eval(cookies[:cart]).length : 0 %>)</span>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <% Category.all.each do |category| %>
            <%= link_to category.title, category_path(category) if category.root? %><br>
          <% end %>
        </div>
      </div>
      <p class="messages">
        <span class="notice"><%= notice %></span>
        <span class="alert"><%= alert %></span></p>
      <%= yield %>
    </div>
  </div>

  </body>
  <div class="container" >
    <footer >
      <hr>
      <div class="row">
        <div class="col-lg-12" >
          <p>Copyright &copy; My Website 2016</p>
        </div>
      </div>
    </footer>
  </div>
</html>
