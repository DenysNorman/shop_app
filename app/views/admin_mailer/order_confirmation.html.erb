<h1>Confirmation order <%= @order.id %> </h1>
<ul>
  <li>Customer name: <%= @order.name %></li>
  <li>Phone: <%= @order.phone %></li>
  <li>Email: <%= @order.email %></li>
</ul>
<table>
  <tr>
    <td>Title</td>
    <td>Price</td>
    <td>Quantity</td>
  </tr>
  <% eval(cookies[:cart]).each do |obj| %>
    <tr>
      <td><%= Product.find(obj[:product_id]).title %></td>
      <td><%= obj[:quantity] %></td>
      <td><%= Product.find(obj[:product_id]).price %> </td>
    </tr>
  <% end %>
</table>
<p>Total price <%= number_to_currency(Order.total_price(@order).to_i) %></p>

